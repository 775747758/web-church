.syntax-container.syntax-theme-grey
  table.syntax
    background-color: $background-primary
    border: 1px solid $border-primary

    tr.alt td.source
      background-color: lighten($background-primary, 2%)
  
    td.source
      color: $code-primary
      
    td.number
      border-right: 1px solid #aaa
      color: darken($background-primary, 35%)
      background-color: darken($background-primary, 5%)
