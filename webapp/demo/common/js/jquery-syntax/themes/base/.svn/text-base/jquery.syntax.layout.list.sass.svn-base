@import "_layout"

.syntax-container.syntax-theme-base
  ol.syntax
    padding: 0 0 0 5em !important
    margin: 0 !important
  
    li
      padding: 0 !important
      margin: 0 !important
      +pre-wrap
    
    li div.source
      margin-left: -0.5em
      padding: 0 0.4em 0 !important
  
  ul.syntax
    padding: 0 !important
    margin: 0 !important
    list-style-type: none
  
    li
      padding: 0 !important
      margin: 0 !important
      +pre-wrap
  
    li div.source
      margin: 0 !important
      padding: 0 0.4em 0 !important
